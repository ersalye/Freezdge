<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.inved.freezdge">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utils.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <meta-data
        android:name="edanam.app_id_recipes"
        android:value="s@string/APP_ID_RECIPES" />

        <meta-data
            android:name="edanam.app_key_recipes"
            android:value="@string/APP_KEY_RECIPES" />

        <meta-data
            android:name="edanam.app_id_food"
            android:value="s@string/APP_ID_FOOD" />

        <meta-data
            android:name="edanam.app_key_food"
            android:value="@string/APP_KEY_FOOD" />

        <activity android:name=".controller.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".controller.activity.MyGroceryListActivity">

        </activity>

        <activity android:name=".controller.activity.SearchIngredientsActivity">

        </activity>

        <activity android:name=".controller.activity.BaseActivity">

        </activity>
    </application>

</manifest>