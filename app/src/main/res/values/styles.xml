<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Toolbar theme. -->
    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:fontFamily">@font/avocado_creamy</item>
    </style>

    <!-- STYLE SIGN-IN ACTIVITY -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>


    <style name="TapEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black_three</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@drawable/background_custom_edittext</item>
        <item name="backgroundTint">@color/tap_edittext_color</item>
        <item name="android:textCursorDrawable">@drawable/orange_cursor</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:imeOptions">actionGo</item>
    </style>

    <style name="TapTIL" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="errorTextAppearance">@style/ErrorAppearance</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="ErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
