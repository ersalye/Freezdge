<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ingredient_nav_graph"
    app:startDestination="@+id/fragment_cream">

    <fragment android:id="@+id/fragment_cream"
        android:name="com.inved.freezdge.ingredientslist.ui.CreamFragment"
        android:label="@string/toolbar_search_ingredients"
        tools:layout="@layout/fragment_cream">

        <action
            android:id="@+id/action_to_fragment_fruits_vegetables"
            app:destination="@id/fragment_fruits_vegetables" />

    </fragment>

    <fragment android:id="@+id/fragment_fruits_vegetables"
        android:name="com.inved.freezdge.ingredientslist.ui.FruitsVegetablesFragment"
        android:label="@string/toolbar_search_ingredients"
        tools:layout="@layout/fragment_fruits_vegetables">

        <action
            android:id="@+id/action_to_fragment_epicerie"
            app:destination="@id/fragment_epicerie" />


    </fragment>

    <fragment android:id="@+id/fragment_epicerie"
        android:name="com.inved.freezdge.ingredientslist.ui.EpicerieFragment"
        android:label="@string/toolbar_search_ingredients"
        tools:layout="@layout/fragment_epicerie">

        <action
            android:id="@+id/action_to_fragment_fish"
            app:destination="@id/fragment_fish" />


    </fragment>

    <fragment android:id="@+id/fragment_fish"
        android:name="com.inved.freezdge.ingredientslist.ui.FishFragment"
        android:label="@string/toolbar_search_ingredients"
        tools:layout="@layout/fragment_fish">

        <action
            android:id="@+id/action_to_fragment_meat"
            app:destination="@id/fragment_meat" />


    </fragment>

    <fragment android:id="@+id/fragment_meat"
        android:name="com.inved.freezdge.ingredientslist.ui.MeatFragment"
        android:label="@string/toolbar_search_ingredients"
        tools:layout="@layout/fragment_meat">

    </fragment>

</navigation>